@model HW4Project.Models.RGBInput
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>RGB Colors</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/css/site.css" />
    </head>
    <body class="bg-dark">
        <nav class="navbar sticky-top navbar-expand-md py-0">
            <div class="container-fluid" id="wrapper">
                <div>
                    <ul class="navbar-nav ms-auto">
                        <li class="h5 nav-item p-1 px-3">@Html.ActionLink( "Homework 4", "Index", "Home", null, new { style = "text-decoration: none; color: red; text-shadow: -1px 1px 0 #000; "} )</li>
                        <li class="h5 nav-item p-1 px-3">@Html.ActionLink( "RGB Color", "RGBColor", "Home", null, new {style = "text-decoration: none; color: red; text-shadow: -1px 1px 0 #000; "} )</li>
                        <li class="h5 nav-item p-1 px-3">@Html.ActionLink( "Color Interpolator", "Create", "ColorInterpolator", null, new {style = "text-decoration: none; color: red; text-shadow: -1px 1px 0 #000; "} )</li>
                    </ul>
                </div>
            </div>
        </nav>
        <section class="p-2">
            <div class="container">
                <div class="grid">
                    <div class="row mt-2 justify-content-center">
                        <div class="col-md-5">
                            <div class="card my-2 bg-secondary">
                                <div class="card-body">
                                    <form asp-action="RGBColor" method="get" class="m-2">
                                        <div asp-validation-summary="All"></div>
                                        <div class="form-group p-3">
                                            <label asp-for="Red" class="form-label h5 fw-bold text-white shadow-title">R:</label>
                                            <input asp-for="Red" class="form-control" />
                                        </div>
                                        <div class="form-group p-3">
                                            <label asp-for="Green" class="form-label h5 fw-bold text-white shadow-title">G:</label>
                                            <input asp-for="Green" class="form-control" />
                                        </div>
                                        <div class="form-group p-3">
                                            <label asp-for="Blue" class="form-label h5 fw-bold text-white shadow-title">B:</label>
                                            <input asp-for="Blue" class="form-control" />
                                        </div>                                        
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-danger mt-3">Display</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="card my-2 bg-secondary">
                                <div class="card-body">
                                    <p class="h4 card-title fw-bold text-white text-center shadow-title">Color: </p>
                                    @if (ViewData.ModelState.IsValid) {
                                        <div style="background-color: #@Model.HexValue(); height: 300px; width: auto; border: 3px solid black;"></div>
                                        <p class="text-white">#@Model.HexValue()</p>
                                    } else {
                                        <div style="background-color: #000; height: 300px; width: auto; border: 3px solid black;"></div>
                                        <p class="text-white">#000000</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>