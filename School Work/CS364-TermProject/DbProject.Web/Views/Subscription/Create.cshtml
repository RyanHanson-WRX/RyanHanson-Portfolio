@model DbProject.Web.Models.Subscription

@{
    ViewData["Title"] = "Create";
}

<body>
    <h1>Create</h1>
    <h3>Subscription Plan</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MonthlyPrice" class="control-label">Monthly Price</label>
                    <input asp-for="MonthlyPrice" class="form-control" />
                    <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubscriptionTier" class="control-label">Subscription Tier</label>
                    <input asp-for="SubscriptionTier" class="form-control" />
                    <span asp-validation-for="SubscriptionTier" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label">Company ID</label>
                    <br>
                    <select asp-for="CompanyId" class="control-label">
                    @foreach (Company comp in DbProject.Web.Models.Repository.Companies){
                        <option value="@comp.Id">@comp.Name</option> }
                    <option asp-for="CompanyId" class="form-control" />
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p></p>
                    <input type="submit" value="Create" class="btn btn-primary" style="background-color: #8458B3; border: #8458B3"/>
                    <p></p>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Go Back</a>
    </div>
</body>
