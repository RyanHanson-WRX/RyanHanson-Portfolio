@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 fw-bold">Search for Movies</h1>
</div>

<div class="text-center mt-3">
    <form>
        <div class="input-group" style="width: 40%; margin: auto;">
            <input class="form-control" id="search-input" placeholder="Search for a movie" aria-label="Search for a movie" aria-describedby="search-button" />
            <button class="btn btn-lg btn-outline-accent" id="search-button">Search</button>
        </div>
    </form>
</div>

<template id="movie-template">
    <div id="movie-div" class="movie-card mt-3" data-bs-toggle="modal" data-bs-target="#movie-modal">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4 col-md-2 mx-0 flex-column">
                    <div class="poster-container">
                        <img src="https://placehold.co/200x300" class="card-img-top" alt="placeholder image" class="poster"/>
                    </div>
                </div>
                <div class="col-5 col-md-4 mt-3 flex-column">
                    <h5 class="movie-title fw-bold" style="font-size: 1.15em;"></h5>
                    <h6 class="mb-2 accent-text" style="font-size: 1em;"></h6>
                </div>
                <div class="col-3 col-md-4 mt-3">
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="movie-details-template">
    <div class="mt-3 container">
        <div class="row">
            <div class="col-md-7">
                <div class="background-poster-container">
                    <img src="https://placehold.co/607x253" alt="placeholder image" class="background-poster"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-sm-6">
                        <h5>Release Date</h5>
                        <p id="release-date"></p>
                        <h5>Runtime</h5>
                        <p id="runtime"></p>
                        <h5>Revenue</h5>
                        <p id="revenue"></p>
                    </div>
                    <div class="col-sm-6">
                        <div id="genres" class="genres">
                            <h5>Genres</h5>
                            <ul id="genres-list"></ul>
                        </div>
                        <h5>Popularity</h5>
                        <p id="popularity"></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">
                <h5 class="mt-3">Overview</h5>
                <p id="overview"></p>
            </div>
            <div class="col-md-4">
                <h5 class="mt-3">Starring</h5>
                <ul id="cast-list"></ul>
            </div>
        </div>
    </div>
</template>

<div class="mt-3">
    <div id="movie-results" class="row"></div>
</div>

<!-- Modal -->
<div class="modal fade" id="movie-modal" tabindex="-1" aria-labelledby="movie-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-10" id="movie-modal-label">
                    <span id="movie-modal-label-title"></span>
                    <span id="movie-modal-label-year" class="accent-text"></span>
                </h1>
                <button id="close-movie-modal1" type="button" class="btn-close accent-bg" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3" id="movie-modal-body"></div>
            </div>
            <div class="modal-footer">
                <button id="close-movie-modal2" type="button" class="btn btn-outline-accent" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/index.js"></script>
}