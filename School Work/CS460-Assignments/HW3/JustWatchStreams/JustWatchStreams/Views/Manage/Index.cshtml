@{
    ViewData["Title"] = "HW3 - Manage Actors";
}
<div class="container text-center">
    <div>
        <h1 class="display-4 fw-bold shadowText accentText">Manage Actors</h1>
        <hr />
    </div>
    <div class="row justify-content-center d-flex errorMessage">
        <div class="col-lg-10">
            <div id="status-message-area" class="accentText textShadow text-center justify-content-center d-flex" style="border: none;">
                <button id="close-message" type="button" class="btn-close accentBG mt-2 mx-2" aria-label="Close" style="display: none;"></button>
                <h4 id="status-message-text" class="accentText shadowText mt-1 mx-2"></h4>
            </div>
        </div>
    </div>
    <div class="adminBTNS mt-2">
        <button class="btn btn-secondary mt-2 accentText" type="button" style="width: 20%; font-size: x-large;" id="new-actor" data-bs-toggle="modal" data-bs-target="#actor-modal">Create a New Actor</button>
    </div>
    <br />
    <h4 class="shadowText text-center">Search an Actor to Edit:</h4>
    <input type="text" placeholder="Search for an actor..." id="search-bar" />
    <div class="search-results">
        <div  id="loading-animation" class="loading-animation" style="margin: auto; display: none;"></div>
        <ul class="list-unstyled" id="results-list">
        
        </ul>
    </div>
       <!-- Modal -->
        <div class="modal fade" id="actor-modal" tabindex="-1" aria-labelledby="actor-modal-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-dark">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5 shadowText" id="actor-modal-label"></h1>
                        <button id="close-actor-modal1" type="button" class="btn-close accentBG" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body shadowText">
                        <div class="mb-3">
                            <form class="list-unstyled text-left" id="actor-modal-form">

                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span class="accentBTN">
                            <button id="submit-actor-modal" type="button" class="btn" data-bs-dismiss="modal">Save</button>
                        </span>
                        <button id="close-actor-modal2" type="button" class="btn btn-secondary accentText" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
</div>

<style>
    .errorMessage {
        width: 40%;
        height: 100%;
        padding: 15px;
        margin: auto;
    }

</style>


@section Scripts {
    <script type="text/javascript" src="~/js/manage.js"></script>
}