<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JustWatchStreams.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark bg-gradient">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black bg-gradient border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand accentText" asp-area="" asp-controller="Home" asp-action="Index">JustWatchStreams</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Info">Info</a>
                        </li>
                    </ul>
                </div>
            </div>
            <h6 class="fw-bold text-white text-nowrap nav-link fst-italic">By: <span class="accentText">Ryan Hanson</span></h6>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black bg-gradient">
        <div class="container">
            &copy; 2023 - JustWatchStreams
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar .navbar-nav .nav-link:hover
    {
        color: rgb(0, 255, 217) !important;
    }
    .navbar .navbar-nav .nav-item 
    {
        position: relative;
    }
    .nav-item::after 
    {
        position: absolute !important;
        bottom: 0 !important;
        left: 0 !important;
        right: 0 !important;
        margin: auto !important;
        background-color: rgb(0, 255, 217) !important;
        width: 0% !important;
        content: "" !important;
        height: 4px !important;
        transition: all 0.5s !important;
    }
    .nav-item:hover::after 
    {
        width: 100% !important;
    }
</style>
@section scripts {
    <script type="text/css" src="~/css/home.css"></script>
}
