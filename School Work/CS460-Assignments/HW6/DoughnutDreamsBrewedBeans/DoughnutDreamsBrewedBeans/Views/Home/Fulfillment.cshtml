@model IEnumerable<DoughnutDreamsBrewedBeans.ViewModels.StationViewModel>

@{
    ViewBag.Title = "Fulfillment";
}

<template id="order-template">
    <div id="order-temp-div" class="station-card main-bg">
        <div class="justify-content-center">
            <div class="row">
                    <p id="order-id" class="fw-bold mb-0" style="display: flex; float: left;"></p>
                    <p id="order-name" class="fw-bold mb-0" style="display: flex; float: left;"></p>
            </div>
            <div class="row mb-3">
                <div class="station-table-container mb-5">
                    <table class="station-table table table-striped table-dark table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Quantity</th>
                                <th>Item</th>
                                <th>Description</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="item-table">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-3">
                <div class="bottom-card">
                    <p id="order-store" style="text-decoration: underline; flex-wrap: wrap;"></p>
                </div>
        </div>
    </div>
</template>

<template id="item-template">
    <tr>
        <td id="item-quantity"></td>
        <td id="item-name"></td>
        <td id="item-desc"></td>
        <td id="item-status"></td>
    </tr>
</template>

<div class="text-center">
    <h1 class="accent-text shadow-text fw-bold" style="text-decoration: underline;">Fulfillment</h1>
    <h1 id="no-orders" class="text-danger">Select a Station</h1>
    <div class="station-select-area">
        <label for="station-select" class="form-label text-white fw-bold station-select-label">Station:</label>
        <select id="station-select" name="station-select" class="form-select station-form">
            <option value="0">Select a Station</option>
            @if (Model != null)
            {
                @foreach (var station in Model)
                {
                    <option value="@station.Id">@station.Name</option>
                }
            }
        </select>
    </div>
    <div id="orders-div" class="station-box grid-shadow">

    </div>
    <a href="@Url.Action("Index", "Home")" class=" mt-3 btn-outline-accent btn">Back to Home</a>
</div>

@section Scripts{
    <script src="~/js/fulfillment.js"></script>
}